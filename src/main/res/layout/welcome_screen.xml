<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="284dp"
        android:layout_height="124dp"
        android:layout_marginTop="80dp"
        android:text="Welcome to Mexican Train!"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startNewGame"
        android:layout_width="283dp"
        android:layout_height="51dp"
        android:layout_marginTop="24dp"
        android:text="click here to start a new game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText" />

    <Button
        android:id="@+id/loadGame"
        android:layout_width="284dp"
        android:layout_height="51dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="Click here to load an existing game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/startNewGame" />
</androidx.constraintlayout.widget.ConstraintLayout>